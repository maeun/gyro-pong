<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App Theme (Dark Mode) -->
    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:statusBarColor">#0D1B2A</item>
        <item name="android:windowBackground">#0D1B2A</item>
        <item name="android:navigationBarColor">#0D1B2A</item>
    </style>
    
    <!-- Theme applied to the Android Window while the process is starting (Dark Mode) -->
    <style name="LaunchTheme" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:statusBarColor">#0D1B2A</item>
        <item name="android:navigationBarColor">#0D1B2A</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    
    <!-- Theme applied after Flutter initializes (Dark Mode) -->
    <style name="NormalTheme" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">#0D1B2A</item>
        <item name="android:statusBarColor">#0D1B2A</item>
        <item name="android:navigationBarColor">#0D1B2A</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>
